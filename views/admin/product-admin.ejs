<%- include('../includes/header.ejs') %> <%-
include('../includes/navigation.ejs') %>
<link rel="stylesheet" href="/css/product.css" />
<link rel="stylesheet" href="/css/main.css" />

<body>
  <h1>Product Page</h1>

  <!-- product.ejs -->
  <% for (let i = 0; i < products.length; i++) { %>
  <div class="product">
    <img src="<%= products[i].imageUrl %>" alt="Product Image" />
    <div class="product-info">
      <h1 class="product-title"><%= products[i].title %></h1>
      <p class="product-description"><%=products[i].description%></p>
      <p class="product-price"><%=products[i].price%> $</p>
      <form action="/admin/delete/<%=products[i]._id.toString()%>" method="delete">
        <button class="primary-button" name="buy-now">Delete</button>
      </form>
      <form action="/admin/edit/<%= products[i]._id.toString()%>" method="put">
        <button class="primary-button" name="">Edit</button>
      </form>
    </div>
  </div>
  <% } %> <%- include('../includes/footer.ejs') %>
</body>
