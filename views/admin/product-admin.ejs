<%- include('../includes/header.ejs') %>
<%- include('../includes/navigation.ejs') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/main.css">

<body>
  <h1>Product Page</h1>

<!-- product.ejs -->
<% for (let i = 0; i < products.length; i++) { %>
    <div class="product">
      <!-- https://images.pexels.com/photos/13661636/pexels-photo-13661636.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2 -->
      <img
      src="<%= products[i].imageUrl %>"
      alt="Product Image"
    />
      <div class="product-info">
        <h1 class="product-title"><%= products[i].title %> </h1>
        <p class="product-description"> <%=products[i].description%> </p>
        <p class="product-price"> <%=products[i].price%> $</p>
          <form action="/admin/delete/<%= products[i].id%>" method="delete">
            <button class="delete-button" name="buy-now">Delete</button> 
          </form>
          <form action="/admin/edit/<%= products[i].id%>" method="put">
            <button class="edit-button" name="" >Edit</button>
          </form>
      </div>
    </div>
<% } %>


<%- include('../includes/footer.ejs') %>
